<div class="actions">
  <%= link_to 'Crear libro', new_admin_project_path %>
</div>

<table>
  <thead>
    <tr>
      <td>Título</td>
      <td>Descripción</td>
      <td>Serie</td>
      <td>Propietario</td>
      <td></td>
    </tr>
  </thead>
  <tbody>
    <% @projects.each do |project| %>
      <tr class="<%= cycle('even', 'odd') %>">
        <td class="title"><%= link_to project.title, [:admin, project] %></td>
        <td><%= project.description %></td>
        <td><%= project.series.title %></td>
        <td><%= project.user.name %></td>
        <td class="actions">
          <%= link_to 'Administrar', admin_project_path(project) %>
          <%= link_to 'Editar', edit_admin_project_path(project) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
