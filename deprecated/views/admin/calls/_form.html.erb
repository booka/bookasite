<%= simple_form_for([:admin, @project, @call]) do |form| %>
  <div class="inputs">
    <%= form.input :title %>
    <%= form.input :description %>
    <%= form.input :content_type, :collection => [['html', 'text/html']], :include_blank => false %>
    <%= form.input :body %>
  </div>
  <div class="controls">
    <%= form.submit %><%= link_to 'Cancelar', (@project.new_record? ? admin_projects_path : [:admin, @project])%>
  </div>
<% end %>