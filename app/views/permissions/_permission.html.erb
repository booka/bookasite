<% div_for permission do %>
    <%= render permission.user if project? %>
    <h3><%= t("permission.level.#{permission.level}") %>
      <% if !project? %>
          en <%= link_to permission.project.title, permission.project %>
      <% end %>
    </h3>
    <% if project? %>
        <div class="actions">
          <% if can? :edit, project %>
              <%= link_to 'Modificar nivel de acceso', [:edit, project, permission] %>
              <%= link_to 'Eliminar participante', [project, permission],
                :method => :delete, :confirm => 'Esto eliminarÃ¡ el permiso de este participante. Â¿Seguro?' %>
          <% end %>
          <% if current_user and current_user.roles == 'super' %>
              <%= link_to 'Entrar!', enter_path(permission.user.id) %>
          <% end %>
        </div>
    <% end %>

<% end %>
