<% title page.title %>

<%= render_top do %>
    <h1>booka</h1>
    <h4>plataforma editorial abierta</h4>
    <div class="actions">
      <% if current_user && current_user.super? %>
          <%= link_to 'Participantes', users_path %>
      <% end %>
    </div>
<% end %>


<div class="row24">
  <div id="browser" class="col-left">
    <%= link_to image_tag('iconos/booka.png'), root_path %>
    <%= render_browser :series, series %>
  </div>
  <div class="col-center editable" data-page="<%= page.id %>">
    <%= render_body page %>
    <%= disqus page %>
  </div>
  <div id="info" class="col-right">
    <%= render_body info %>
  </div>
</div>

