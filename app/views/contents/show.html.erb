<% title @content.title %>

<%= render_top %>
<div class="row24">
  <div id="navigation" class="col-left">
    <%= link_to image_tag('iconos/libro.png'), @project %>
    <h2>Materiales</h2>
    <ul>
      <% @contents.each do |content| %>
          <%= content_tag_for :li, content do %>
              <h3><%= link_to content.title, [@project, content] %></h3>

              <div class="authors"><%= content.authors %></div>
          <% end %>
      <% end %>
    </ul>
  </div>
  <div class="col-center-left">
    <% @content.assets.each do |asset| %>
        <%= image_tag asset.file.url %>
    <% end %>
    &nbsp;
  </div>
  <div class="col-center-right">
    <h1><%= @content.title %></h1>

    <h2><%= @content.authors %></h2>
    <%= render_body @content %>
    &nbsp;
  </div>
</div>
<div class="row24">
  <div class="col-left">&nbsp;</div>
  <div class="col-main">
    <%= disqus @content %>
  </div>
</div>



