<% title asamblea.title %>
<%= render_top :asambleas %>

<div class="row24">
  <div id="browser" class="col-left">
    <%= render_browser :asambleas, project.asambleas %>
  </div>
  <div class="col-center app">
    <h1><%= asamblea.title %></h1>
    <ul class="properties">
      <li><label>Fecha de inicio:</label><%= asamblea.begin_date %></li>
      <li><label>Fecha de finalización:</label><%= asamblea.end_date %></li>
    </ul>
    <%= render_body asamblea %>
    <div class="actions">
      <%= link_to 'Editar propiedades de este foro', [:edit, project, asamblea] %>
    </div>
    <h2>Temas de discusión</h2>
      <% asamblea.topics.each do |topic| %>
        <%= render topic %>
      <% end %>
    <div class="actions">
      <%= link_to 'Añadir un tema de discusión', [:new, project, asamblea, :topic] %>
    </div>
    <h2>Tareas</h2>
      <% asamblea.tasks.each do |task| %>
        <%= render task %>
      <% end %>
    <div class="actions">
      <%= link_to 'Añadir una tarea', [:new, project, asamblea, :topic] %>
    </div>
  </div>
</div>