<%= title 'Actividad' %>


<table>
  <thead>
    <tr>
      <td>Hace</td>
      <td>Actividad</td>
    </tr>
  </thead>
  <tbody>
    <% @activities.each do |activity| %>
      <tr class="<%= cycle('even', 'odd') %>">
        <td><%= time_ago_in_words activity.created_at %></td>
        <td>
          <%= activity.user ? link_to(activity.user.name, admin_user_path(activity.user)) : 'Alguien' %> ha
          <%= t "activity.action.#{activity.action}" %> <%= t "activity.model.#{activity.model}" %>
          <% if activity.project %>
          en <%= link_to "'#{activity.project.title}'", admin_project_path(activity.project) %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

