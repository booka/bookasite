<%= title 'Páginas' %>

<div class="actions">
  <%= link_to 'Añadir página', new_admin_page_path %>
</div>

<table>
  <thead>
    <tr>
      <td>Título</td>
      <td>Dirección</td>
      <td></td>
    </tr>
  </thead>
  <tbody>
    <% @pages.each do |page| %>
      <tr class="<%= cycle('even', 'odd') %>">
        <td><%= link_to page.title, [:admin, page] %></td>
        <td><%= page.slug %></td>
        <td class="actions">
          <%= link_to 'Editar', edit_admin_page_path(page) %>
          <%= link_to 'Borrar', admin_page_path(page), :method => :delete,
            :confirm => "Quieres borrar el usuario '#{page.title}'!! No se puede volver atrás!!. ¿Segura?" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

