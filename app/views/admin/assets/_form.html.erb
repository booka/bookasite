
<ul class="properties">
  <li>Pertenece a: <%= @project.title %></li>
  <li>Se asocia a: <%= @resource.title %></li>
  <li>Propietario: <%= current_user.name %></li>
</ul>
<div class="actions">&nbsp;</div>

<% url = @resource != @project ? [:admin, @project, @resource, :assets] : [:admin, @project, :assets] %>

<%= simple_form_for(@asset, :as => :asset, :url => url, :html => { :multipart => true}) do |form| %>
  <div class="inputs">
    <%= form.input :title %>
    <%= form.input :description %>
    <%= form.input :file, :as => :file %>
  </div>
  <div class="controls">
    <%= form.submit %><%= link_to 'Cancelar', (@project.new_record? ? admin_projects_path : [:admin, @project])%>
  </div>
<% end %>