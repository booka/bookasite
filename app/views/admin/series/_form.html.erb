<%= simple_form_for([:admin, @series]) do |form| %>
  <div class="inputs">
    <%= form.input :title %>
    <%= form.input :icon_path %>
    <%= form.input :content_type, :collection => [['html', 'text/html']], :include_blank => false %>
    <%= form.input :page_id, :collection => Page.all.map {|p| [p.title, p.id]} %>
    <%= form.input :body %>
  </div>
  <div class="controls">
    <%= form.submit %><%= link_to 'Cancelar', (@series.new_record? ? admin_series_index_path : [:admin, @series])%>
  </div>
<% end %>