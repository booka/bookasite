<div class="actions">
  <%= link_to 'Subir material', [:new, :admin, @project, :content], :method => :get %>
</div>

<table>
  <thead>
    <tr>
      <td>Posición</td>
      <td></td>
      <td>Título</td>
      <td>Autorxs</td>
      <td>Descripción</td>
      <td></td>
    </tr>
  </thead>
  <tbody>
    <% contents.each do |content| %>
      <tr class="<%= cycle('even', 'odd') %>">
        <%= position_actions(content) %>
        <td><%= content.position %></td>
        <td class="title"><%= link_to content.title, [:admin, @project, content] %></td>
        <td><%= content.authors %></td>
        <td><%= content.description %></td>
        <td class="actions">
          <%= link_to 'Editar', [:edit, :admin, @project, content], :method => :get %>
          <%= link_to 'Borrar', [:admin, @project, content], :method => :delete,
          :confirm => "Quieres borrar el material '#{content.title}'!! No se puede volver atrás!!. ¿Segura?" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
