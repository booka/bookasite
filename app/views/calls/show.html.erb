      <li class="call">
        <%= link_to call.title, project_call_path(call.project), 
          :"data-page" => bok_path(call.id) %>
        <div class="property description"><%= call.description %></div>
      </li>
    <% end %>
  </ul>
</div>
<div class="center">
  <div class="page">
    <h1><%= @call.title %></h1>
    <%= @call.body.html_safe %>
  </div>
  
  
  <%= disqus(@call, [@call.project, @call])%>
  
</div>
