<% title "Trabajos" %>

<%= render_top :users do %>
    <h1>Trabajos</h1>
<% end %>

<div class="row24">
  <div id="browser" class="col-left">
    &nbsp;
  </div>
  <div class="col-center">
    <h2>Resultado</h2>
    <div class="actions">
        <%= link_to 'Siguiente', work_path %>
    </div>
    <% if flash[:worker_output] %>
        <ul>
          <% flash[:worker_output].each do |line| %>
            <li><%= line %></li>
          <% end %>
        </ul>
    <% end %>
    <br/>
    <h2>Lanzar</h2>
    <%= simple_form_for Job.new(:name => 'system.nothing') do |form| %>
        <%= form.input :name %>
        <%= form.input :priority %>
        <div class="controls">
          <%= form.submit %>
        </div>
    <% end %>
    <br/>
    <h2>Cola</h2>
    <table>
      <% jobs.each do |job| %>
          <tr class="<%= cycle('even', 'odd') %>">
            <td><%= job.priority %></td>
            <td><%= job.name %></td>
            <td><%= job.user.name %></td>
            <td><%= time_ago_in_words job.created_at %></td>
            <td><%= job.started_at %></td>
            <td><%= job.finished_at %></td>
          </tr>
      <% end %>
    </table>
  </div>
  <div id="info" class="col-right">
  </div>
</div>


